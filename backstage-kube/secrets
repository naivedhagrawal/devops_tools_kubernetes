kubectl create secret generic postgres-secrets \
  --namespace=devops-tools \
  --from-literal=POSTGRES_HOST=postgres.devops-tools.svc.cluster.local \
  --from-literal=POSTGRES_PORT="5432" \
  --from-literal=POSTGRES_USER=backstage \
  --from-literal=POSTGRES_PASSWORD=backstage \
  --from-literal=POSTGRES_DB=backstage \
  --labels=app=postgres,env=dev

  kubectl create secret generic github-secrets \
  --namespace=devops-tools \
  --from-literal=GITHUB_CLIENT_ID=Ov23liTdg4cnjlZHraXG \
  --from-literal=GITHUB_CLIENT_SECRET=c9a6462f3825782d07091724cb18a66b136185b8 \
  --from-literal=GITHUB_TOKEN=your-github-token-here \
  --labels=app=backstage,env=dev